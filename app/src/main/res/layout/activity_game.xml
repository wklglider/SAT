<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".game">

    <TextView android:text="@string/timer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignBottom="@+id/score_editText"
        android:layout_toRightOf="@+id/timer_editText"
        android:layout_toEndOf="@+id/timer_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_editText"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:text="00:00:00"
        android:layout_alignBaseline="@+id/timer"
        android:layout_alignBottom="@+id/timer"
        android:layout_toRightOf="@+id/timer"
        android:layout_toEndOf="@+id/timer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_editText"
        android:text="66"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:layout_alignTop="@+id/timer_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_shape1"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/timer_editText"
        android:layout_toRightOf="@+id/timer"
        android:layout_toEndOf="@+id/timer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_shape2"
        android:layout_alignBottom="@+id/button_shape1"
        android:layout_toRightOf="@+id/timer_editText"
        android:layout_toEndOf="@+id/timer_editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_shape3"
        android:layout_below="@+id/button_shape1"
        android:layout_alignLeft="@+id/button_shape1"
        android:layout_alignStart="@+id/button_shape1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_shape4"
        android:layout_alignTop="@+id/button_shape3"
        android:layout_alignLeft="@+id/button_shape2"
        android:layout_alignStart="@+id/button_shape2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Shape"
        android:id="@+id/first_shape_textView"
        android:layout_below="@+id/button_shape3"
        android:layout_alignLeft="@+id/timer"
        android:layout_alignStart="@+id/timer"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/operator_textView"
        android:layout_alignTop="@+id/first_shape_textView"
        android:layout_alignLeft="@+id/timer_editText"
        android:layout_alignStart="@+id/timer_editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Shape"
        android:id="@+id/second_shape_textView"
        android:layout_alignTop="@+id/operator_textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equal_textView"
        android:layout_alignTop="@+id/second_shape_textView"
        android:layout_toRightOf="@+id/score"
        android:layout_toEndOf="@+id/score" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_editText"
        android:layout_alignTop="@+id/equal_textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/score_editText"
        android:layout_alignStart="@+id/score_editText"
        android:text="something" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="7"
        android:id="@+id/num_button_7"
        android:layout_below="@+id/result_editText"
        android:layout_toLeftOf="@+id/second_shape_textView"
        android:layout_toStartOf="@+id/second_shape_textView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="8"
        android:id="@+id/num_button_8"
        android:layout_alignBottom="@+id/num_button_7"
        android:layout_alignRight="@+id/score"
        android:layout_alignEnd="@+id/score" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="9"
        android:id="@+id/num_button_9"
        android:layout_alignBottom="@+id/num_button_8"
        android:layout_toRightOf="@+id/equal_textView"
        android:layout_toEndOf="@+id/equal_textView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="4"
        android:id="@+id/num_button_4"
        android:layout_below="@+id/num_button_7"
        android:layout_alignLeft="@+id/num_button_7"
        android:layout_alignStart="@+id/num_button_7" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="5"
        android:id="@+id/num_button_5"
        android:layout_alignTop="@+id/num_button_4"
        android:layout_alignLeft="@+id/num_button_8"
        android:layout_alignStart="@+id/num_button_8" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="6"
        android:id="@+id/num_button_6"
        android:layout_alignBottom="@+id/num_button_5"
        android:layout_alignLeft="@+id/num_button_9"
        android:layout_alignStart="@+id/num_button_9" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="1"
        android:id="@+id/num_button_1"
        android:layout_below="@+id/num_button_4"
        android:layout_alignRight="@+id/num_button_4"
        android:layout_alignEnd="@+id/num_button_4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="2"
        android:id="@+id/num_button_2"
        android:layout_alignTop="@+id/num_button_1"
        android:layout_alignLeft="@+id/num_button_5"
        android:layout_alignStart="@+id/num_button_5" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="3"
        android:id="@+id/num_button_3"
        android:layout_alignBottom="@+id/num_button_2"
        android:layout_alignRight="@+id/num_button_6"
        android:layout_alignEnd="@+id/num_button_6" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Back"
        android:id="@+id/button_back"
        android:layout_below="@+id/num_button_1"
        android:layout_alignRight="@+id/num_button_1"
        android:layout_alignEnd="@+id/num_button_1" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="0"
        android:id="@+id/num_button_0"
        android:layout_alignTop="@+id/button_back"
        android:layout_alignLeft="@+id/num_button_2"
        android:layout_alignStart="@+id/num_button_2" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Enter"
        android:id="@+id/button_enter"
        android:layout_alignTop="@+id/num_button_0"
        android:layout_alignLeft="@+id/num_button_3"
        android:layout_alignStart="@+id/num_button_3" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Home"
        android:id="@+id/home_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/first_shape_textView"
        android:layout_alignStart="@+id/first_shape_textView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="HELP"
        android:id="@+id/help_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/result_editText"
        android:layout_alignEnd="@+id/result_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/equal_textView"
        android:layout_alignRight="@+id/num_button_9"
        android:layout_alignEnd="@+id/num_button_9" />

</RelativeLayout>
